<Window x:Class="PaymentForLongDistanceCalls.Windows.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaymentForLongDistanceCalls.Windows"
        mc:Ignorable="d"
        Title="MainMenu" Height="280" Width="600" MinHeight="280" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold">Оплата за междугородние разговоры</Label>
        <Label Grid.Row="1" Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="15" FontStyle="Italic">Функции</Label>
        <StackPanel HorizontalAlignment="Center" Grid.Row="2">
            
          
            <Button Margin="0 20 0 0" x:Name="GoAllClients" Click="GoAllClients_Click">Просмотр и добавление клиентов</Button>
            <Button Margin="0 20 0 0" x:Name="GoAllServices" Click="GoAllServices_Click">Просмотр услуг</Button>
            <Button Margin="0 20 0 0" x:Name="Close" Click="Close_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
